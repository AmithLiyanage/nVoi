<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nvoi.nvoi_new.Login"
    android:background="@color/colorDarkBlue">


    <ImageView
        android:id="@+id/login_nVoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/login_nvoi_logo_white" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_nVoi"
        android:background="@drawable/login_textbox_frame"
        android:hint="name@gmail.com"
        android:inputType="textEmailAddress"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        android:paddingLeft="20dp"
        android:textColorHint="@color/colorGary4"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_email"
        android:background="@drawable/login_textbox_frame"
        android:hint="Password"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:textColor="@color/colorWhite"
        android:paddingLeft="20dp"
        android:textColorHint="@color/colorGary4"/>

    <Button
        android:id="@+id/login_btnLogin"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/login_password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:clickable="true"
        android:text="LOGIN"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/login_btnSignUp"/>

    <Button
        android:id="@+id/login_btnSignUp"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/login_btnLogin"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_frame_btn"
        android:clickable="true"
        android:text="SIGNUP"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Forgot your password?"
        android:textColor="@color/colorGray5"
        android:layout_below="@+id/login_btnSignUp"
         android:layout_marginTop="10dp"/>


</RelativeLayout>
